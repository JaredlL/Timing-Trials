<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="courseVm"
            type="com.jaredlinden.timingtrials.ui.SelectableCourseViewModel"/>

    </data>




    <RelativeLayout
        android:id="@+id/courseLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/genericTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{courseVm.nameString ?? @string/course_name}"
            tools:text="Course Name" />

        <TextView
            android:id="@+id/genericTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{courseVm.distString ?? @string/distance}"
            tools:text="Length" />

        <TextView
            android:id="@+id/genericTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toStartOf="@id/checkBox"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{courseVm.cttNameString ?? @string/cttname}"
            tools:text="CTT Name" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentEnd="true" />




    </RelativeLayout>


</layout>