<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.android.jared.linden.timingtrials.ui.RiderStatusViewWrapper"/>
        <import type="android.view.View"/>
        <import type="com.android.jared.linden.timingtrials.ui.RiderStatus"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:visibility="@{viewModel.status == RiderStatus.FINISHED ? View.GONE : View.VISIBLE}"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/riderStatusTextView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_rider_status_dnf"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> viewModel.onPressed()}"
            android:text="@{viewModel.number}"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/startTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.startTimeDisplay}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/riderStatusTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>